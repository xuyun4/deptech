<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.daptech.mapper.CallMapper">

    <insert id="addCall">
        INSERT INTO `call` (name, phone_number, time, type, location,second,hand_up_type, user_id)
        VALUES
        <foreach collection="callList" item="call" separator=",">
            (#{call.name}, #{call.phoneNumber}, #{call.time}, #{call.type},
            #{call.location},#{call.second},#{call.handUpType},#{call.userId})
        </foreach>
    </insert>

    <delete id="deleteCall">
        delete from `call` where user_id=#{userId}
    </delete>

    <select id="getNumberByMap" resultType="java.lang.Integer">
        select  count(*) from `call`
        <where>
            <if test="begin!=null">
                and time &gt; #{begin}
            </if>
            <if test="end!=null">
                and time &lt; #{end}
            </if>
            and type!=#{noType}
            and user_id=#{userId}
        </where>
    </select>

    <select id="selectCall" resultType="com.example.daptech.entity.Call">
        select * from `call` where user_id=#{userId}
    </select>
